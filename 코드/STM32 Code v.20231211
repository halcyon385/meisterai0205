short traffic_light_state = 0;
short rader_state = 0;

// PC0 - 2 G / PC1 - 1 R / PC2 - 2 G

uint16_t traffic_pins[] = { GPIO_PIN_0, GPIO_PIN_1, GPIO_PIN_2 };

void ToggleTrafficLight(short state) {
	traffic_light_state = state;
	for (short i = 0; i < 3; i++) {
		HAL_GPIO_WritePin(GPIOC, traffic_pins[i], 0);
	}
	HAL_GPIO_WritePin(GPIOC, traffic_pins[traffic_light_state], 1);
}

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim->Instance == TIM3) {
//  	char msg[20] = "";
//  	sprintf(msg, "value : %d\n", traffic_light_state);
//  	HAL_UART_Transmit(&huart2, (uint8_t*)msg, sizeof(msg), 1);
  	ToggleTrafficLight(traffic_light_state);
  	traffic_light_state++;
  	if (traffic_light_state > 2) traffic_light_state = 0;
  }
}

void PrintMsg(uint8_t speed) {
	char s [20];
	sprintf (s, "%d km / h\r\n" , speed);  // Serial 출력
	HAL_UART_Transmit(&huart2, (uint8_t *)s, strlen(s), HAL_MAX_DELAY);
}

uint8_t GetRaderSpeed(void) {
	if (rader_state == 0) {
		rader_state = 1;
		uint16_t T, v, vmax = 0;
		double f;

		while (HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_0));
		TIM4->CNT = 0;
		HAL_TIM_Base_Start(&htim4);
		while (!HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_0));
		T = __HAL_TIM_GET_COUNTER(&htim4);
		HAL_TIM_Base_Stop(&htim4);

		f = 1.0 / ( double ) T;            // 주파수 측정
		v = (uint8_t) ((f * 1e6 ) / 44.0);    // 속도 측정
		vmax = v > vmax ? v : vmax;       // 속도의 Max값 측정
		rader_state = 0;
		return vmax;
	} else {
		return 0;
	}
}

void ShowLcdTime(void) {
	char lcd_msg[16] = "";
	double counter = __HAL_TIM_GetCounter(&htim3);
	counter = floor((counter/5000)*5);
	sprintf(lcd_msg, "Time : %.fs", counter);
	lcd_put_cur(0, 3);
	lcd_send_string(lcd_msg);
	HAL_Delay(100);
}

void ShowLcdSpeed(uint8_t speed) {
	char lcd_msg[16] = "";
	sprintf(lcd_msg, "Speed : %d km/h", speed);
	lcd_put_cur(1, 0);
	lcd_send_string(lcd_msg);
	HAL_Delay(100);
}
